{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "mini-jira-app",
  "version": "0.1.0",
  "identifier": "com.ariefg.mini-jira-app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build:release",
    "frontendDist": "../build"
  },
  "app": {
    "trayIcon": {
      "id": "main",
      "iconPath": "icons/icon.ico",
      "iconAsTemplate": false,
      "tooltip": "Mini Jira App"
    },
    "windows": [
      {
        "title": "mini-jira-app",
        "width": 400,
        "height": 670,
        "resizable": false,
        "visible": true,
        "closable": true,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
